<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Tennis Scoreboard</title>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true"/>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js"></script>
</head>
<body>
    <nav>
        <ul>
            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-controller="NewMatch" asp-action="StartNewMatch">New match</a></li>
            <li><a asp-controller="Matches" asp-action="GetMatches">Matches</a></li>
        </ul>
    </nav>
    @if (ViewData["Title"]?.ToString() != "Home")
    {
        <h2>@ViewData["Title"]</h2>
    }
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>
</body>
</html>